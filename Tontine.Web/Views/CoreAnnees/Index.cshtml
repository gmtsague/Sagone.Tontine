<h1>Index</h1>

<p><button type="button" class="btn btn-primary">New...</button>
    <a asp-action="CreateView" data-bs-toggle1="modal" data-bs-target1="#partialModal" id="anchor-year-create" onclick="DisplayForm(null,event); return false;">Create New</a>
</p>
<div style="overflow-x:auto;">
    <!--<table id="anneesDatatable" class="table table-striped table-bordered hover dt-responsive nowrap">
        <table id="anneesDatatable" class="display responsive table table-hover nowrap" title="Gridview with Datatables.net">
    -->
    <table id="anneesDatatable" class="display table-hover table-striped table-responsive table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datedebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datefin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iscurrent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isclosed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nbdivision)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Idbureau)*@ Bureau
            </th>
            <th class="text-center">
                <a asp-action="Index"><i class="fas fa-rotate-right fa-lg" title="Refresh"></i></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <a asp-action="EditView" asp-route-id="@item.Idannee" id="anchor-year-edit-@item.Idannee" 
                    onclick="DisplayForm(null, event); return false;"> @Html.DisplayFor(modelItem => item.Libelle)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datedebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datefin)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Iscurrent)
            </td>
                    <td class="text-center">
                @Html.DisplayFor(modelItem => item.Isclosed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nbdivision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdbureauNavigation.Libelle)
            </td>
            <td>
                <!--<a asp-action="Edit" asp-route-id="@item.Idannee">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idannee">Details</a> |-->
                <!--  <i class="fas fa-pen-to-square fa-lg"></i><a asp-action="Edit" asp-route-id="@item.Idannee" id="anchor-year-edit-@item.Idannee" onclick="DisplayForm('anchor-year-edit-@item.Idannee'); return false;">Edit</a> |-->
                <a asp-action="Details" asp-route-id="@item.Idannee" id="anchor-year-detail-@item.Idannee" onclick="DisplayForm(null, event); return false;">
                    <i class="far fa-eye fa-lg" title="Details"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Idannee" id="anchor-year-delete-@item.Idannee" onclick="DisplayForm('anchor-year-delete-@item.Idannee',event); return false;">
                    <i class="far fa-trash-can fa-lg" title="Delete"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
