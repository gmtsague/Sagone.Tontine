<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meeting.web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Meeting.web.styles.css" asp-append-version="true" />
    <!-- form helper -->
    <link rel="stylesheet" href="~/lib/formhelper/formhelper.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Meeting.web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_AppmenuPartial" class="d-flex align-self-start " />                   
                    <ul class="navbar-nav flex-grow-1">
                       @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    @* <partial name="_ShowGlobalEntities" class="" />*@

                    <div>
                        @using Meeting.Web.Views.Shared.Components.SessionHeader;
                        @await Component.InvokeAsync(nameof(SessionHeaderVC),new {
                        selectedYear = @TempData.Peek("SelectedYear") ?? 0,
                        selectedEtab = @TempData.Peek("SelectedEtab") ?? 0,
                        selectedAntena = @TempData.Peek("SelectedAntena") ?? 0 })
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
              @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Meeting.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/formhelper/formhelper.bundle.min.js"></script>
    <script src="~/lib/moment.js/dist/moment.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        if (typeof jQuery != 'undefined') {  
    // jQuery is loaded => print the version
    console.log(jQuery.fn.jquery);
}
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
