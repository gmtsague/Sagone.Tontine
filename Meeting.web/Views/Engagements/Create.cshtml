@model Meeting.Web.Dto.EngagementDto

@{
    ViewData["Title"] = "Create";
}

@*<h1>Create</h1>*@

<h4>MeetEngagement</h4>
<hr />
<div class="row justify-content-center">
    <div class="card-body">
        <form asp-formhelper="true" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group  p-2">
                <label asp-for="RubriqueId" class="control-label"></label>
                <select asp-for="RubriqueId" class ="form-control form-select" asp-items="ViewBag.RubriqueId"><option value=""> Choose an item </option></select>
            </div>
            <div class="form-group  p-2">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" class ="form-control form-select" asp-items="ViewBag.PersonId"><option value=""> Choose an item </option></select>
            </div>
            <div class="form-group  p-2">
                <label asp-for="Cumulverse" class="control-label"></label>
                <input asp-for="Cumulverse" class="form-control" />
                <span asp-validation-for="Cumulverse" class="text-danger"></span>
            </div>
            <div class="form-group  p-2">
                <label asp-for="Solde" class="control-label"></label>
                <input asp-for="Solde" class="form-control" />
                <span asp-validation-for="Solde" class="text-danger"></span>
            </div>
            <div class="form-group form-check m-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsOutcome" /> @Html.DisplayNameFor(model => model.IsOutcome)
                </label>
            </div>
            <div class="form-group form-check m-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsClosed" /> @Html.DisplayNameFor(model => model.IsClosed)
                </label>
            </div>
            <div class="form-group  p-2">
                <label asp-for="EngagementDate" class="control-label"></label>
                <input asp-for="EngagementDate" class="form-control" />
                <span asp-validation-for="EngagementDate" class="text-danger"></span>
            </div>
            <div class="form-group  p-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
