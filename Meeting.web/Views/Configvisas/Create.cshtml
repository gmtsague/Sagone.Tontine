<div class="row justify-content-center">
    <div class="card-body">
        <form asp-formhelper="true" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group  p-2">
                <label asp-for="PosteId" class="control-label"></label>
                <select asp-for="PosteId" class ="form-control form-select" asp-items="ViewBag.PosteId"><option value=""> Choose an item </option></select>
            </div>
            <div class="form-group  p-2">
                <label asp-for="AnneeId" class="control-label"></label>
                <select asp-for="AnneeId" class ="form-control form-select" asp-items="ViewBag.AnneeId"><option value=""> Choose an item </option></select>
