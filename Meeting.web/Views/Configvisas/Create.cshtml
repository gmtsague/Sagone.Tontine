            </div>
            <div class="form-group form-check m-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SignByOrdre" /> @Html.DisplayNameFor(model => model.SignByOrdre)
                </label>
            </div>
            <div class="form-group d-flex justify-content-around border-1 border-secondary border-top p-2 visually-hidden">
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                <input id="regularSubmitBtn" type="submit" value="Save" class="btn btn-primary" />
