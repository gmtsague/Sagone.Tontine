@model Meeting.Web.Dto.RubriqueDto

@{
    ViewData["Title"] = "Edit";
}

@*<h1>Edit</h1>*@

@*<h4>MeetRubrique</h4>
<hr />*@
<div class="row justify-content-center">
    <div class="card-body">
        <form asp-formhelper="true" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RubriqueId" />
            <div class="form-group m-3">
                <label asp-for="AnneeId" class="control-label"></label>
                <select asp-for="AnneeId" class="form-control form-select" readonly="readonly" asp-items="ViewBag.AnneeId"><option value=""> Choose an item </option></select>
                <span asp-validation-for="AnneeId" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="TyperubId" class="control-label"></label>
                <select asp-for="TyperubId" class="form-control form-select" asp-items="ViewBag.TyperubId"><option value=""> Choose an item </option></select>
                <span asp-validation-for="TyperubId" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Libelle" class="control-label"></label>
                <input asp-for="Libelle" class="form-control" />
                <span asp-validation-for="Libelle" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Nbmandataire" class="control-label"></label>
                <input asp-for="Nbmandataire" class="form-control" />
                <span asp-validation-for="Nbmandataire" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Montantroute" class="control-label"></label>
                <input asp-for="Montantroute" class="form-control" />
                <span asp-validation-for="Montantroute" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="MontantPerson" class="control-label"></label>
                <input asp-for="MontantPerson" class="form-control" />
                <span asp-validation-for="MontantPerson" class="text-danger"></span>
            </div>
            <div class="form-group form-check m-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsOutcome" /> @Html.DisplayNameFor(model => model.IsOutcome)
                </label>
            </div>
            <div class="form-group m-3">
                <label asp-for="Commentaire" class="control-label"></label>
                <textarea asp-for="Commentaire" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Commentaire" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-around border-1 border-secondary border-top m-3 visually-hidden">
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                <input id="regularSubmitBtn" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
